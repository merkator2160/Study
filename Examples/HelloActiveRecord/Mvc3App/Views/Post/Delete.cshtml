@model Model.Post

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Post</legend>
    <div class="display-label">From Blog</div>
    <div class="display-field">@Model.Blog.Name</div>

    <div class="display-label">Title</div>
    <div class="display-field">@Model.Title</div>

    <div class="display-label">Contents</div>
    <div class="display-field">@Model.Contents</div>

    <div class="display-label">Category</div>
    <div class="display-field">@Model.Category</div>

    <div class="display-label">Created</div>
    <div class="display-field">@String.Format("{0:g}", Model.Created)</div>

    <div class="display-label">Published</div>
    <div class="display-field">@Model.Published</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


