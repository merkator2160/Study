<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="600">
    <Grid>
        <Button Content="Read" Height="23" HorizontalAlignment="Left" Margin="10,287,0,0" Name="button1" VerticalAlignment="Top" Width="75" Click="readBtn_Click" />
        <TextBox Height="237" HorizontalAlignment="Left" Margin="12,42,0,0" Name="textBox1" VerticalAlignment="Top" Width="568" TextWrapping="Wrap" RenderTransformOrigin="0.5,0.5" >
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.056"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <ComboBox HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="120" Name="SelectVoiceComboBox"/>
    </Grid>
</Window>
