<Window x:Class="BindingToSQL.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Window1" Height="300" Width="300" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ListBox Grid.Row="0" Name="ListOfBooks">
            
        </ListBox>
        
        <StackPanel Grid.Row="1">
            <TextBlock Text="{Binding ElementName=ListOfBooks, Path=SelectedItem.Id}"></TextBlock>
            <TextBlock Text="{Binding ElementName=ListOfBooks, Path=SelectedItem.Title}"></TextBlock>
            <TextBlock Text="{Binding ElementName=ListOfBooks, Path=SelectedItem.Author}"></TextBlock>
            <TextBlock Text="{Binding ElementName=ListOfBooks, Path=SelectedItem.Description}"></TextBlock>
        </StackPanel>
    </Grid>
</Window>
