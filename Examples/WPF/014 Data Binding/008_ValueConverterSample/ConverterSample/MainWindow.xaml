<Window x:Class="ConverterSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Использование конвертеров" Height="350" Width="525"
        xmlns:local="clr-namespace:ConverterSample">
    
    <Window.Resources>
        <local:Converter x:Key="ConverterObject"></local:Converter>
    </Window.Resources>
    
    <StackPanel>
        
        <Slider Minimum="0" Maximum="7" Name="Slider1"></Slider>
        
        <TextBox Text="{Binding ElementName=Slider1, 
            Path=Value, 
            Converter={StaticResource ConverterObject},
            UpdateSourceTrigger=PropertyChanged}">
        </TextBox>
        
    </StackPanel>
    
</Window>
