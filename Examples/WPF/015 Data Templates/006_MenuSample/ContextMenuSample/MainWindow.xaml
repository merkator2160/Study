<Window x:Class="ContextMenuSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Контекстное меню" Height="350" Width="525">
    <Window.Resources>
        <ContextMenu x:Key="Test">
            <MenuItem Header="Пункт 1"></MenuItem>
            <MenuItem Header="Пункт 2"></MenuItem>
            <MenuItem Header="Пункт 3"></MenuItem>
        </ContextMenu>
    </Window.Resources>
    <Grid>
        
        <Button Margin="100" Content="Кнопка с контекстным меню" ContextMenu="{StaticResource Test}">
        </Button>
        
    </Grid>
</Window>
