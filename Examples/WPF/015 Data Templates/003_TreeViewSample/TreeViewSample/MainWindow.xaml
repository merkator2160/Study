<Window x:Class="TreeViewSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Иерархические шаблоны данных" Height="350" Width="525">
    <Grid>
        <TreeView Name="treeView1">
            <!--Шаблон для описания структуры дерева-->
            <TreeView.ItemTemplate>
                
                <HierarchicalDataTemplate ItemsSource="{Binding Path=trafficList}">
                    
                    <TextBlock Text="{Binding Path=Name}" />
                    
                    <HierarchicalDataTemplate.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Path=TrafficDescription}"></TextBlock>
                        </DataTemplate>
                    </HierarchicalDataTemplate.ItemTemplate>
                    
                </HierarchicalDataTemplate>
                
            </TreeView.ItemTemplate>
        </TreeView>
    </Grid>
</Window>
